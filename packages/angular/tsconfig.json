{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": false,
    "baseUrl": ".",
    "paths": {
      "@channel-state/core": ["../core/src"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
