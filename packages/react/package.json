    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "format": "prettier --write 'src/**/*.{ts,tsx}' --config ../../.prettierrc.json"
  },
  "dependencies": {
    "@channel-state/core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
